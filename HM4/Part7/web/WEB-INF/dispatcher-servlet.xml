<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class = "org.springframework.web.servlet.handler.BeanNameUrlHandlerMapping"/>

    <bean name="/direction*" class="com.neu.edu.controller.DirectionController" />
    <bean name="/addmovie.htm" class="com.neu.edu.controller.AddMovieController" />
    <bean name="/searchmovie.htm" class="com.neu.edu.controller.SearchMovieController" />


    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.InternalResourceViewResolver"
          p:prefix="/WEB-INF/jsp/"
          p:suffix=".jsp" />



</beans>